<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepDetailsActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewdetails"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbtn"
            android:layout_marginLeft="10dp"
            android:onClick="backsleepactivity"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lovebtn"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/down" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/downloadbtn"
            android:layout_marginLeft="10dp"
            android:id="@+id/down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTVdetails"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/imageViewdetails"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTVdetails"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:layout_below="@+id/nameTVdetails"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fulldesTVdetails"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/detailsTVdetails"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/upperlinear"
        android:layout_below="@+id/fulldesTVdetails"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/faviv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favTVdetails"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lestiv"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesTVdetails"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/upperlinear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Related"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondrecycler"/>

    </LinearLayout>


       <TextView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_alignParentBottom="true"
           android:background="@drawable/btn_shape"
           android:text="PLAY"
           android:onClick="musicplayer"
           android:layout_margin="15dp"
           android:textSize="18sp"
           android:textColor="@color/white"
           android:gravity="center"/>

</RelativeLayout>